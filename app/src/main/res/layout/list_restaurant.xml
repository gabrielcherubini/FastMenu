<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nomeListRestaurante_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/endereçoListRestaurante_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomeListRestaurante_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/labelDistanciaListRestaurante_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endereçoListRestaurante_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/distanciaListRestaurante_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endereçoListRestaurante_textView"
        android:layout_toRightOf="@id/labelDistanciaListRestaurante_textView"
        android:layout_toEndOf="@id/labelDistanciaListRestaurante_textView"
        android:padding="4dp"/>

    <Button
        android:id="@+id/infoListRestaurante_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomeListRestaurante_textView"
        android:layout_toRightOf="@id/distanciaListRestaurante_textView"
        android:layout_toEndOf="@id/distanciaListRestaurante_textView"
        android:padding="4dp"/>

</RelativeLayout>