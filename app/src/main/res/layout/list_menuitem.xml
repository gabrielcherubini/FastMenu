<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/nomeItemMenu_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/labelPreçoItemMenu_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomeItemMenu_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/preçoItemMenu_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomeItemMenu_textView"
        android:layout_toRightOf="@id/labelPreçoItemMenu_textView"
        android:layout_toEndOf="@id/labelPreçoItemMenu_textView"
        android:padding="4dp"/>

    <Button
        android:id="@+id/infoItemMenu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomeItemMenu_textView"
        android:layout_toRightOf="@id/preçoItemMenu_textView"
        android:layout_toEndOf="@id/preçoItemMenu_textView"
        android:padding="4dp"/>

</RelativeLayout>